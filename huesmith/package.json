{
  "name": "huesmith",
  "displayName": "Huesmith",
  "description": "Forge your code in vibrant hues.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [{
      "command": "huesmith.updateColor",
      "title": "Huesmith: Update Color"
    }],
    "configuration": {
      "type": "object",
      "title": "Huesmith",
      "properties": {
        "huesmith.PrimaryBackground": {
          "type": "string",
          "default": "#0d0d0d",
          "description": "The primary background color for the Huesmith extension."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "pnpm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}